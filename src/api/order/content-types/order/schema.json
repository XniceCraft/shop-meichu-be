{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "buyerName": {
      "type": "string",
      "required": true
    },
    "contact": {
      "type": "string",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "confirmed",
        "in_progress",
        "completed",
        "cancelled"
      ]
    },
    "items": {
      "type": "component",
      "component": "order.order-item",
      "repeatable": true,
      "required": true
    },
    "totalPrice": {
      "type": "integer",
      "required": true
    }
  }
}